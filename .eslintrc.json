{
	"extends": "next/core-web-vitals",
	"parser": "@typescript-eslint/parser",
	"parserOptions": { "project": ["./tsconfig.json"] },
	"plugins": ["@typescript-eslint", "react"],
	"rules": {
		"indent": ["warn", "tab"],
		"linebreak-style": ["warn", "unix"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"camelcase": ["error", {"ignoreImports": true}],
		"comma-spacing": "warn"
	}
}
